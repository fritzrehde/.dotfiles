# open terminal
alt + Return
	kitty

# open browser
alt + BackSpace
	firefox

# reload sxhkd
alt + r
	pkill -USR1 -x sxhkd; dunstify "sxhkd reloaded" -a "ignorehistory" -t 500 -r 9997

# reload bspwm
alt + shift + {q,r}
	bspc {quit,wm -r}

# focus on given desktop
alt + {1-9,0}
	bspc desktop -f '^{1-9,10}'

# send to given desktop
alt + shift + {1-9,0}
	DESKTOP='^{1-9,10}'; \
	bspc node -d $DESKTOP; \
	bspc desktop -f $DESKTOP

# kill window
alt + q
	bspc node -c

# focus on next window in same workspace
alt + Tab
	bspc node -f next.local.window

# fullscreen
# alt + f
	# bspc node -t fullscreen

## rofi
# rofi apps
alt + d
	rofi -show drun

# rofi clipmenu
alt + p
	/bin/zsh -ic "clipmenu -theme ~/.config/rofi/themes/clipmenu.rasi"

# rofi power
alt + Escape
	~/.scripts/rofi/rofipower.sh

# todo list
alt + t
	kitty --class "popup_s" /bin/zsh -ic ~/.scripts/todo/todo_do.sh

# todo prio
alt + i
	kitty --class "popup_s" /bin/zsh -ic ~/.scripts/todo/todo_prio.sh

# todo add
alt + n
	alacritty --class popup_xs,popup_xs -e ~/.scripts/todo/todo_add.sh
	# kitty --class "popup_xs" ~/.scripts/todo/todo_add.sh

# timer
alt + shift + t
	alacritty --class popup_xs,popup_xs -e ~/.scripts/notify/timer_init.sh

# extra
alt + e
	kitty --hold --class "popup_s" ~/.scripts/util/extra.sh

# weather
# alt + w
	# kitty --hold --class "popup_l" curl wttr.in/Garching

# htop
alt + h
	kitty --class "popup_l" htop

## dunst
# close all dunst notifications
alt + w
	dunstctl close

# increase volume
alt + k
	~/.scripts/notify/changevolume.sh up

# decrease volume
alt + j
	~/.scripts/notify/changevolume.sh down

# decrease volume
alt + m
	~/.scripts/notify/changevolume.sh mute

## tmux
# Kill current tmux session
super + q
	~/.scripts/tmux/kill_session.sh

## screenshots
# whole screen
super + shift + 3
	~/.scripts/util/screenshot.sh

# select frame
super + shift + 4
	~/.scripts/util/screenshot.sh select

