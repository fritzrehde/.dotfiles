[colors]
background = #000000
background-alt = #787C8F
foreground = #ffffff
foreground-alt = #555
primary = #ffffff
alert = #bf616a


[bar/top]
;monitor = ${env:MONITOR:HDMI-1}
height = 20
top = true
fixed-center = true
wm-restack = bspwm

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 1

font-0 = Terminus:size=10;2
font-1 = FiraCode Nerd Font:size=11;3

modules-left = i3 bspwm
modules-center = date
modules-right = bluetooth wlan eth cpu_temp ram_used battery


[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-padding = 1

label-occupied = %index%
label-occupied-padding = 1

label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = ""
label-empty-padding = 0

; Separator in between workspaces
; label-separator = |


[module/date]
type = internal/date
interval = 2
date = %a, %d %b
time = %H:%M
label = %date% %time%


[module/date2]
type = custom/script
interval = 2
exec = date +"%a, %e %b %H:%M"


[module/wlan]
type = internal/network
interface = wlp3s0
interval = 5

format-connected = 直 <label-connected>
label-connected = %essid%

format-disconnected =
;format-disconnected = <label-disconnected>
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}


[module/eth]
type = internal/network
interface = wwp0s29u1u4i6
interval = 5

format-connected =  <label-connected>
label-connected = %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}


[module/cpu_temp]
type = custom/script
interval = 10
exec = ~/.scripts/bar/cpu_temp.sh
format-prefix = "﨎 "
format-suffix = "°"


[module/ram_used]
type = custom/script
interval = 10
exec = ~/.scripts/bar/ram_used.sh
format-prefix = " "
format-suffix = " GB"


[module/bluetooth]
type = custom/script
interval = 10
exec = ~/.scripts/bar/bluetooth.sh


[module/battery]
type = custom/script
interval = 10
exec = ~/.scripts/bar/battery.sh
click-left = "pkill -USR1 -x sxhkd; dunstify 'sxhkd reloaded' -a 'ignorehistory' -t 500 -r 9997"


[module/battery2]
type = internal/battery
battery = BAT0
adapter = AC
poll-interval = 10
full-at = 100

format-charging =  <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full =  <label-full>

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.foreground}
ramp-capacity-0-foreground = ${colors.alert}


[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 0
margin-bottom = 0

