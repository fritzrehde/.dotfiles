[colors]
background = #000000
background-alt = #787C8F
foreground = #ffffff
foreground-alt = #555
primary = #ffffff
alert = #bf616a


[bar/top]
;monitor = ${env:MONITOR:HDMI-1}
enable-ipc = true
height = 20
top = true
fixed-center = true
wm-restack = bspwm
;pin-workspaces = true

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 1

font-0 = Terminus:size=10;2
font-1 = FiraCode Nerd Font:size=11;3

modules-left = bspwm
modules-center = date
modules-right = bluetooth wlan eth cpu_temp ram_used battery


[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-padding = 1

label-occupied = %index%
label-occupied-padding = 1

label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = ""
label-empty-padding = 0

; Separator in between workspaces
; label-separator = |


[module/wlan]
type = internal/network
interface = wlp3s0
interval = 10

format-connected = 直 <label-connected>
label-connected = %essid%

format-disconnected =
;format-disconnected = <label-disconnected>
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}


[module/eth]
type = internal/network
interface = enp0s25
interval = 10

format-connected = 
;label-connected = %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}


[module/date]
type = custom/script
interval = 2
exec = date +"%a, %d %b %H:%M"


[module/cpu_temp]
type = custom/script
interval = 10
exec = cpu-temp.sh
format-prefix = "﨎 "
format-suffix = "°"


[module/ram_used]
type = custom/script
interval = 10
exec = ram-used.sh
format-prefix = " "
format-suffix = " GB"


[module/battery]
type = custom/script
interval = 10
exec = battery.sh
click-left = sxhkd-reload.sh


[module/bluetooth]
type = custom/script
interval = 10
exec = bluetooth.sh


[module/mute]
type = custom/ipc
hook-0 = mute-status.sh
initial = 1


[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 0
margin-bottom = 0

