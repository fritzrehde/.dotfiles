set nocompatible

syntax on
colorscheme nord
set termguicolors

set number
set noshowcmd
set encoding=utf-8
set scrolloff=2
set clipboard=unnamed

set ignorecase
set nohlsearch

" Tabs
set tabstop=4 
set softtabstop=0 
set noexpandtab 
set shiftwidth=4 
set autoindent

" Cursor
set guicursor=i:ver90
set mouse=a

set noerrorbells
set visualbell
set t_vb=
